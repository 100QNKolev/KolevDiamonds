@model ProductQueryModel

@{
    ViewData["Title"] = "All Jewelry";
}

<h1>All Jewelry</h1>

<div class="container">
    <partial name="_FilterProductsByPricePartial" model="Model" />
    <partial name="_FilterProductsByAvailabilityPartial" model="Model" />
    @if (Model.Products.Count() > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            <img src="@item.ImagePath" alt="@item.Name" class="product-image" />
                            @item.Name
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <div class="card-body">
                                <a href="#" class="btn btn-primary">Edit</a>
                                @if(item.IsForSale == true) 
                                {
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Jewelry" asp-action="Delete" asp-route-id="@item.Id" asp-route-productType="@item.ProductType">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No more jewelry!</p>
    }

    <div class="row">
        <div class="col-md-12">
            <partial name="_PaginationPartial" model="@Model" />
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    h2 {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 40px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .product-image {
        max-width: 100px;
        max-height: 100px;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1rem;
        color: #666666;
        margin-bottom: 10px;
    }

    .btn {
        margin-right: 10px;
    }
</style>
