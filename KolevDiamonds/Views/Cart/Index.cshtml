@model List<ProductIndexServiceModel>

@{
    ViewData["Title"] = "Cart";
}

<h1>Shopping Cart</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImagePath" alt="@item.Name" class="product-image" />
                        @item.Name
                    </td>
                    <td>@item.Price</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Cart" method="post">
                            <input type="hidden" name="Id" asp-for="@item.Id" />
                            <input type="hidden" name="Name" asp-for="@item.Name" />
                            <button type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total">Total: @(Model.Sum(item => item.Price))</div>
}
else
{
    <p>Your cart is empty.</p>
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .total {
        font-weight: bold;
        margin-top: 20px;
    }

    .product-image {
        max-width: 100px;
        max-height: 100px;
    }
</style>